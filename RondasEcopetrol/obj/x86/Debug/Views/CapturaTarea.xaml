<base:PageBase
    x:Class="RondasEcopetrol.Views.CapturaTarea"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RondasEcopetrol.Views"
    xmlns:base="using:RondasEcopetrol.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=CapturaTareaViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image 
                Grid.Row="0"
                Source="/Assets/LogoEcopetrol.png"
                Margin="0,10,0,10"/>

            <Grid Grid.Row="1" Background="#80FF00" BorderBrush="Green">
                <TextBlock 
                Text="CAPTURA DATOS"
                FontSize="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                FontFamily="Segoe UI"
                Margin="0,10,0,10"
                Foreground="#088A08"
                FontWeight="Bold"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Row="0"
                Grid.Column="0"
                Text="Equipo"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="#088A08"
                FontWeight="Bold"
                />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="DH2951"
                Margin="0,0,0,10"
                />
            <TextBlock 
                Grid.Row="1"
                Grid.Column="0"
                Text="Tarea"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="#088A08"
                FontWeight="Bold"/>
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="DESAIREADOR"
                
                />
            <TextBlock 
                Grid.Row="2"
                Grid.Column="0"
                Text="Valor"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="#088A08"
                FontWeight="Bold"/>
            <Grid Grid.Row="2" Grid.Column="1" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <CalendarDatePicker x:ConnectionId='10' 
                Grid.Column="0"
                x:Name="arrivalCalendarDatePicker" 
                />
                <TextBox
                Grid.Column="1"
                Text=""
                />
                
            </Grid>
            

            <TextBlock 
                Grid.Row="3"
                Grid.Column="0"
                Text="Comentario"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="#088A08"
                FontWeight="Bold"/>
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Text="..."
                />
            <CheckBox x:ConnectionId='9' 
                Grid.Row="4"
                Grid.Column="1"
                x:Name="termsOfServiceCheckBox" 
                Content="Sin comentario"
                VerticalAlignment="Top"/>
            <TextBlock 
                Grid.Row="5"
                Grid.Column="0"
                Text="Causa"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="#088A08"
                FontWeight="Bold"/>
            <ComboBox  
                PlaceholderText="Seleccionar"
                Width="200"
                Grid.Row="5"
                Grid.Column="1"
                VerticalAlignment="Center">
                <x:String>Proceso 1</x:String>
                <x:String>Proceso 2</x:String>
                <x:String>Proceso 3</x:String>
                <x:String>Proceso 4</x:String>
                <x:String>Proceso 5</x:String>
                <x:String>Proceso 6</x:String>
               
            </ComboBox>
        </Grid>
        <ListView x:ConnectionId='2' x:Name="listView1" Grid.Row="2" Margin="0,30,0,0">
            <ListView.ItemTemplate>
                <DataTemplate                      >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="47"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="valor:291" Foreground="Teal" 
                           FontSize="14" />
                        <TextBlock Text="01/23/2018 21:01:58" Foreground="Teal" 
                           FontSize="14" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:ConnectionId='3' x:Name="anterior" Content="Anterior" Command="{Binding NavigationCommand}" CommandParameter="Anterior" Margin="10,10,10,10" Background="#330CFF00" RequestedTheme="Default"/>
            <Button x:ConnectionId='4' x:Name="siguiente" Content="Siguiente" Command="{Binding NavigationCommand}" CommandParameter="Siguiente" Margin="10,10,10,10" Background="#330CFF00" RequestedTheme="Default"/>
            <Button x:ConnectionId='5' x:Name="guardar" Content="Guardar" Command="{Binding AceptarCommand}"  Margin="10,10,10,10" Background="#330CFF00" RequestedTheme="Default"/>
            <Button x:ConnectionId='6' x:Name="cancelar" Content="Cancelar" Command="{Binding CancelarCommand}" Margin="10,10,10,10" Background="#33FD0000" ></Button>
        </StackPanel>

    </Grid>
</base:PageBase>

