<base:PageBase
    x:Class="RondasEcopetrol.Views.EnviarRonda"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RondasEcopetrol.Views"
    xmlns:base="using:RondasEcopetrol.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=EnviarRondaViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image 
                Grid.Row="0"
                Source="/Assets/LogoEcopetrol.png"
                Margin="0,10,0,10"/>

            <Grid Grid.Row="1" Background="#80FF00" BorderBrush="Green">
                <TextBlock 
                Text="ENVIAR RONDA"
                FontSize="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="Segoe UI"
                Margin="0,10,0,0"
                Foreground="#088A08"
                FontWeight="Bold" Height="54"/>
            </Grid>
        </Grid>

        <ListView x:ConnectionId='2' x:Name="listView1" Grid.Row="1" Margin="0,30,0,0" 
                  ItemsSource="{Binding Path=RondasaSubir}" 
                  IsItemClickEnabled="True" 
                  SelectedItem="{Binding SelectedItem,Mode = TwoWay  }" 
                                                  >
            <ListView.ItemTemplate>
                <DataTemplate                      >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="47"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Assets/SubirRonda.png" Width="32" Height="32" 
                       HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding Path= Nombre}" Foreground="Teal" 
                           FontSize="14" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:ConnectionId='3' x:Name="actualizar" Content="Actualizar" Command="{Binding ActualizarCommand}" Margin="10,10,10,10" Background="#330CFF00" RequestedTheme="Default"/>
            <Button x:ConnectionId='4' x:Name="cancelar" Content="Cancelar" Command="{Binding CancelarCommand}" Margin="10,10,10,10" Background="#33FD0000" ></Button>
        </StackPanel>
    </Grid>
</base:PageBase>

